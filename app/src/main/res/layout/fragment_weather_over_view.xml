<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="weatherData"
                type="com.example.weather.db.entitys.WeatherEntity"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
                                                       xmlns:tools="http://schemas.android.com/tools"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:id="@+id/tv_root"
                                                       android:background="@color/black"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       tools:context=".ui.fragments.WeatherOverViewFragment">


        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="10dp"
                android:id="@+id/guideline3">
        </androidx.constraintlayout.widget.Guideline>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="10dp"
                android:id="@+id/guideline4">
        </androidx.constraintlayout.widget.Guideline>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="10dp"
                android:id="@+id/guideline2">
        </androidx.constraintlayout.widget.Guideline>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="10dp"
                android:id="@+id/guideline">
        </androidx.constraintlayout.widget.Guideline>

        <ScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/guideline4">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="#171717"
                            app:cardCornerRadius="15dp">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                            <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    app:lottie_rawRes="@raw/location"
                                    android:scaleType="centerCrop"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true"
                                    android:layout_marginStart="5dp"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="About Location"
                                    android:textColor="@color/white"
                                    android:layout_gravity="start|center"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="latitude : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_latitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:padding="10dp"
                            android:text="@{String.valueOf(weatherData.lat)}"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="longitude : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_longitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="@{String.valueOf(weatherData.lon)}"
                            android:padding="10dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="timezone : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_time_zone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="@{weatherData.timezone}"
                            android:padding="10dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="timezone offset : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_time_zone_offset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="@{String.valueOf(weatherData.timezone_offset)}"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="#171717"
                            app:cardCornerRadius="15dp">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                            <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    app:lottie_rawRes="@raw/sun"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true"
                                    android:layout_marginStart="15dp"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Current Updates"
                                    android:textColor="@color/white"
                                    android:layout_gravity="start|center"
                                    android:layout_marginStart="20dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="date : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_current_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:setUnixDate="@{weatherData.current.dt}"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sunrise : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_sunrise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:setUnixDate="@{weatherData.current.sunrise}"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sunset : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_sunset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:setUnixDate="@{weatherData.current.sunset}"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="temperature : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="@{String.valueOf(weatherData.current.temp)}"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="feels Like : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_feels_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(weatherData.current.temp)}"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pressure : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_pressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(weatherData.current.pressure)}"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="humidity : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="@{String.valueOf(weatherData.current.humidity)}"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="dew point : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:id="@+id/tv_dew_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="@{String.valueOf(weatherData.current.dew_point)}"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="uvi : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(weatherData.current.uvi)}"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="clouds : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(weatherData.current.clouds)}"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="visibility : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(weatherData.current.visibility)}"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="wind speed : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(weatherData.current.wind_speed)}"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="wind deg : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(weatherData.current.wind_deg)}"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="wind gust : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(weatherData.current.wind_deg)}"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="#171717"
                            app:cardCornerRadius="15dp">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                            <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    app:lottie_rawRes="@raw/sun"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true"
                                    android:layout_marginStart="15dp"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="weather"
                                    android:textColor="@color/white"
                                    android:layout_gravity="start|center"
                                    android:layout_marginStart="20dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="main : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:text="@{String.valueOf(weatherData.current.weather[0].main)}"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="description : "
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:alpha="0.5"
                            android:padding="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:text="@{weatherData.current.weather[0].description}"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
